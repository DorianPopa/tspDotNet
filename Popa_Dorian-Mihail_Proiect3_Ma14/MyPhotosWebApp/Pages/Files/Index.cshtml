@page
@model MyPhotosWebApp.Pages.Files.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Files</h1>
<form>
    <p>
        Find files with this property:
        <select asp-for="SearchString" asp-items="Model.FilterPropertyList">
            <option value="">All Files</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Files[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Files[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Files[0].Path)
            </th>
            <th>
                Properties
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Files)
        {
            <tr style="font-size:small">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Path)
                </td>
                <td>
                    <a asp-page="../Properties/Index" asp-route-id="@item.Id">See</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
@if (Model.SearchResults == 1)
{
    <p>Found @Model.SearchResults file with the selected property!</p>
}
else
{
    <p>Found @Model.SearchResults files with the selected property!</p>
}


